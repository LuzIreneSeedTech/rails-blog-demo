<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    posted by <%= link_to post.user.name, user_path(post.user) %> 
  </p>

  <p>
    <%= pluralize post.views, "view" %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= post.content %>
  </p>

</div>
